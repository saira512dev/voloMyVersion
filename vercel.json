{
    "version": 2,
    "public": false,
    "builds": [
     { "src": "package.json", "use": "@vercel/static-build" },
     { "src": "/backend/server.js", "use": "@vercel/node" }
    ],
    "redirects": [
      { "source": "/(.*)", "destination": "/backend/server.js" },
      { "source": "(.*)", "destination": "/index.html" }
     ]
    }